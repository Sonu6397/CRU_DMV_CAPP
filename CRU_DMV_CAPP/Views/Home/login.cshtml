@model CRU_DMV_CAPP.Models.usermodel
@{
    ViewBag.Title = "login";
}

<h2>login</h2>
<style>
    .error {
        color: #ff0000;
    }
</style>

@using (Html.BeginForm())
{
    <div class="mb-3">

        <label class="form-horizontal"> Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" ,@requird="required"})
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
        <span class="error">@ViewBag.a</span>

    </div>
    <div class="mb-3">

        <label class="form-horizontal"> Password</label>
        @Html.TextBoxFor(m => m.password, new { @class = "form-control", @placeholder = "password" ,@type="password", @requird = "required" })
        @Html.ValidationMessageFor(m => m.password, "", new { @class = "error" })
        <span class="error">@ViewBag.e</span>

    </div>
    <br />
    <div>
        <input type="submit" value="login" class="btn btn-success" />
    </div>
}